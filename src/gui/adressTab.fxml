<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.HBox?>


<BorderPane prefHeight="200.0" prefWidth="200.0"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.AdressTabController">
	<center>
		<TableView fx:id="adressTableView" prefHeight="200.0"
			prefWidth="200.0" BorderPane.alignment="CENTER">
			<columns>
				<TableColumn fx:id="adressIdTableColumn" text="Id" />
				<TableColumn fx:id="adressCityTableColumn" text="City" />
				<TableColumn fx:id="adressPostalCodeTableColumn" text="Postal Code" />
				<TableColumn fx:id="adressStreetTableColumn" text="Street" />
				<TableColumn fx:id="adressHouseNumberTableColumn" text="House Number" />
				<TableColumn fx:id="adressFlatNumberTableColumn" text="Flat Number" />				
			</columns>
		</TableView>
	</center>
	<left>
		<VBox alignment="BASELINE_CENTER" prefHeight="200.0" prefWidth="100.0"
			BorderPane.alignment="CENTER">
			<children>
				<Label fx:id="infoLabel">
					<VBox.margin>
						<Insets top="10.0" />
					</VBox.margin>
				</Label>
				<Button fx:id="addAdressButton" minHeight="-Infinity" minWidth="-Infinity"
					mnemonicParsing="false" prefHeight="25.0" prefWidth="62.0" text="Add">
					<VBox.margin>
						<Insets bottom="5.0" top="5.0" />
					</VBox.margin>
				</Button>
				<Button fx:id="editAdressButton" layoutX="29.0" layoutY="53.0" minHeight="-Infinity"
					minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0"
					prefWidth="62.0" text="Edit">
					<VBox.margin>
						<Insets bottom="5.0" top="5.0" />
					</VBox.margin>
				</Button>
				<Button fx:id="deleteAdressButton" layoutX="29.0" layoutY="88.0" minHeight="-Infinity"
					minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0"
					prefWidth="62.0" text="Delete">
					<VBox.margin>
						<Insets bottom="5.0" top="5.0" />
					</VBox.margin>
				</Button>
			</children>
			<opaqueInsets>
				<Insets />
			</opaqueInsets>
		</VBox>
	</left>
</BorderPane>